= simple_form_for([@appointment, @booking]) do |f|
  .form-style-5
    %form
      %fieldset
        %legend
          %span.number 1
          Finalize Appointment
        =f.input :appointment_id, :as => :hidden, :input_html => { :value => @appointment.id }
        =f.input :conf_temp, :label => "Notes to vendor"
      %fieldset
        %legend
          %span.number 2
          Submit Request
      %script.stripe-button{ src: "https://checkout.stripe.com/checkout.js", data: {amount: @appointment.amount.cost*100, description: @appointment.title, image: "#{asset_path('pampered_header.png')}", name: "PamperedUp", key: Rails.application.secrets.stripe_publishable_key}}



