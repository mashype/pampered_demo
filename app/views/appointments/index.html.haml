%script{:src => "//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"}
%script{:src => "//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js", :type => "text/javascript"}

.wrapper_with_padding
  #appointment_background
    .panel.panel-default
      .panel-body
        .row
          #appointments.transitions-enabled
            - @appointments.each_with_index do |appointment, i|
              %a{ href: (url_for [appointment])}
                .box.panel.panel-default
                  .panel-heading
                    %h2= appointment.title
                  .panel-body
                    .col-xs-4
                      %img.img-circle.center-block{alt: "Profile Picture", src: appointment.vendor.user.avatar.url(:thumb)}/
                    .col-xs-8
                      %p= appointment.description
                  .panel-footer
                    .stars
                      %p= appointment.vendor.user.username
                      %p= appointment.title
                      %p= appointment.amount.cost
  
        .row
          .col-md-8.col-md-offset-2
            %img{:style => "width: 100%;"}
              #map{:style => "width: 100%; height: 400px;"} 
            %p 
            = form_tag appointments_path, :method => :get do
              %p= text_field_tag :search, params[:search], placeholder: 'Update your search here...'
              %p= submit_tag "Refresh Search", :search => nil
              %br

:javascript
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    markers = handler.addMarkers(#{raw @hash.to_json});
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });