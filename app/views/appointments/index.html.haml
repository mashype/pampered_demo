.wrapper_with_padding
  #appointment_background
    .panel.panel-default
      .panel-body
        .row
          #appointments.transitions-enabled
            - @appointments.each_with_index do |appointment, i|
              %a{ href: (url_for [appointment])}
                .box.panel.panel-default
                  .panel-heading
                    %h2= appointment.title
                  .panel-body
                    .col-xs-4
                      %img.img-circle.center-block{alt: "Profile Picture", src: appointment.user.avatar.url(:thumb)}/
                    .col-xs-8
                      %p= appointment.description
                  .panel-footer
                    .stars
                      %p= appointment.user.username
                      %p= appointment.title
  
     