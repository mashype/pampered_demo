#appointment_show
	.wrapper_with_padding
		.container-fluid
			.row
				.col-md-5
					%img.img-responsive.img-rounded{alt: "Profile Avatar", src: @appointment.vendor.avatar.url(:medium)}
					- if @appointment.vendor.user_id == current_user		
						.row
							.col-md-12
								= link_to "Edit Appointment", edit_appointment_path(@appointment), class: "button"	
					- else user_signed_in?
						.row
							.col-md-6
								= link_to "Review Me", "#", class: "button"	
							.col-md-6 
								= link_to "Book Now", new_appointment_booking_path(@appointment), class: "button"				
				.col-md-7 
					#appointment_demo
						%table.table
							%tbody
								%tr
									%td
										%strong Title:
									%td= @appointment.title
								%tr
									%td
										%strong Price:
									%td= number_to_currency(@appointment.amount.cost, unit:"$")
								%tr
									%td
										%strong Username:
									%td= @appointment.vendor.user.username
								%tr
									%td
										%strong Gender:
									%td= @appointment.vendor.user.gender.gender 
								%tr
									%td
										%strong Bio:
									%td= @appointment.vendor.bio 
			%br
			#appointment_description
				.row
					.col-md-12 
						%br/
						%h2 APPOINTMENT DESCRIPTION
						%p= @appointment.description
						%br/

