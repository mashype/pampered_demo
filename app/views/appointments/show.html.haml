#appointment_show
	.wrapper_with_padding 
		.container-fluid
			.row
				.col-md-5
					%img.img-responsive.img-rounded{alt: "Profile Avatar", src: @appointment.vendor.avatar.url(:medium)}
					- if @appointment.vendor.id == current_user.id
						.row
							.col-md-6
								= link_to "Edit Appointment", edit_appointment_path(@appointment), class: "button"	
							.col-md-6
								= link_to "Delete Appointment", @appointment, method: :delete, data: { confirm: 'Are you sure?' }, class: "button"

					- else
						.row
							.col-md-6
								= link_to "Review Me", new_vendor_review_path(@appointment.vendor_id), class: "button"	
							.col-md-6 
								= link_to "Book Now", new_appointment_booking_path(@appointment), class: "button"				
				.col-md-7 
					#appointment_demo
						%table.table
							%tbody
								%tr
									%td
										%strong Title:
									%td= @appointment.title
								%tr
									%td
										%strong Active:
									%td= @appointment.active									
								%tr
									%td
										%strong Price:
									%td= number_to_currency(@appointment.amount.cost, unit:"$")
								%tr
									%td
										%strong Username:
									%td= @appointment.vendor.user.username
								%tr
									%td
										%strong Gender:
									%td= @appointment.vendor.user.gender.gender 
								%tr
									%td
										%strong Bio:
									%td= @appointment.vendor.bio 
								%tr
									%td
										%strong View Profile
									%td= link_to "View Profile", vendor_path(@appointment.vendor_id), class: "button"	
								%tr
									%td
										%strong Share Us:
									%td= social_share_button_tag("PamperedUp")

			#appointment_description
				.row
					.col-md-12 
						%br/
						%h2 APPOINTMENT DESCRIPTION
						%p= @appointment.description
						%br/

