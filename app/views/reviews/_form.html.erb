<%= simple_form_for([@vendor, @review]) do |f| %>
  <%= f.error_notification %>

  <div class="field">
    <div id="star-rating"></div>
  </div>

  <div class="form-inputs">
    <%= f.input :comment %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>
 
<script>
  $('#star-rating').raty({
    path: '/assets/',
    scoreName: 'review[rating]'
  });
</script>
