%li.control-group.nested-fields
	.controls
		= f.simple_fields_for :location do |vendor_location_location|
			=vendor_location_location.input_field :add_1, :placeholder => "Address / Business Same"
			=vendor_location_location.input_field :add_2, :placeholder => "Address Line 2"
			=vendor_location_location.input_field :city, :placeholder => "City"
			=vendor_location_location.input_field :state, :placeholder => "State"
			=vendor_location_location.input_field :zip, :placeholder => "Zip"
		= link_to_remove_association "Remove Location", f, class: "btn btn-danger"
%br/
