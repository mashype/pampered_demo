#MembershipBanner
	%h2 Membership
	%h3 $99 per month

	%p 1 massage or
	%p 1 private chef or
	%p 2 personal training/yoga 

	%h4 Mix and match each month
	%h4 All delivered right to your door
	%br
	%h4 Cancel anytime
	%br


- @vendor_list.each do |vendor_type, vendor_items|
	%h2= vendor_type
	#vendor_memberscroll.container-fluid
		.wrapper
			.scroller
				- vendor_items.each_with_index do |vendor_item, i|
					%a{ href: (url_for [vendor_item])}
						.box.panel.panel-default
							.panel-heading
								%h2= vendor_item.name
							.panel-body
								%img.img-responsive.img-rounded{alt: "Profile Avatar", src: vendor_item.avatar.url(:medium)}


#devise
	.wrapper
		.row
			.containter
				.col-md-6.col-md-offset-3
					= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
						= f.error_notification
						.form-style-5
							%form
								%fieldset
									%legend
										%span.number 
										Let's Get Started Now
									= f.input :username, required: true, autofocus: true, :placeholder => "Create Username", label: false
									= f.input :email, required: true, :placeholder => "Email Address", label: false, type: "email"
									= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable), :placeholder => "Password", label: false, type: "text"
									= f.input :password_confirmation, required: true, :placeholder => "Confirm Password", label: false
							%input{:type => "submit", :value => "Create Account", class: "button"}/
							%p By signing up with Pampered you agree to our #{link_to "Terms of Use", welcome_terms_path}
							%br

