= form_for @vendor_feature do |f|
  - if @vendor_feature.errors.any?
    #error_explanation
      %h2= "#{pluralize(@vendor_feature.errors.count, "error")} prohibited this vendor_feature from being saved:"
      %ul
        - @vendor_feature.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :vendor
    = f.text_field :vendor
  .field
    = f.label :feature
    = f.text_field :feature
  .actions
    = f.submit 'Save'
