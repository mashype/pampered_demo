= form_for @duration do |f|
  - if @duration.errors.any?
    #error_explanation
      %h2= "#{pluralize(@duration.errors.count, "error")} prohibited this duration from being saved:"
      %ul
        - @duration.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :duration
    = f.text_field :duration
  .actions
    = f.submit 'Save'
